            <ComboBox x:Name="cmbInvestor" HorizontalAlignment="Left" Height="23" Margin="18,960,0,0" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
            <Label Content="Funded By" HorizontalAlignment="Left" Margin="18,960,0,0" VerticalAlignment="Top" Width="150" Height="28" Grid.ColumnSpan="2"/>

            <CheckBox x:Name="chkUnderwritingComplete" HorizontalAlignment="Left" Height="23" Margin="18,990,0,0" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
            <Label Content="Underwriting Complete?" HorizontalAlignment="Left" Margin="18,990,0,0" VerticalAlignment="Top" Width="180" Height="28" Grid.ColumnSpan="2"/>

            <Label Content="Completed By" HorizontalAlignment="Left" Margin="18,1020,0,0" VerticalAlignment="Top" Width="178" Height="28" Grid.ColumnSpan="2"/>

            <Label x:Name="lblCompletedBy" HorizontalAlignment="Left" Height="26" Margin="18,1020,0,0" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>


            <Button x:Name="UnderwritingPrintButton" Content="PRINT" HorizontalAlignment="Left" Height="21" Margin="102,53,0,0" VerticalAlignment="Top" Width="83" Click="UnderwritingPrintButton_Click"  Grid.Column="5"/>
            <DatePicker x:Name="dtDateDepositedInEscrow" HorizontalAlignment="Left" Height="35" Margin="331,14,0,0" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="4" Grid.ColumnSpan="2"/>
            <Label Content="Date Deposited in Escrow" HorizontalAlignment="Left" Margin="136,14,0,0" VerticalAlignment="Top" Width="190" Height="28" Grid.Column="4"/>

        </Grid>
    </ScrollViewer>
</Window>
