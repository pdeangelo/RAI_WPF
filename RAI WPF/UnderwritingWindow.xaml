            <CheckBox x:Name="chkCertificateOfGoodStanding" HorizontalAlignment="Left" Height="23" Margin="18,540,0,0" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
