            <CheckBox x:Name="chkCommitteeReview" HorizontalAlignment="Left" Height="23" Margin="18,600,0,0" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
            <Label Content="Committee Review" HorizontalAlignment="Left" Margin="18,600,0,0" VerticalAlignment="Top" Width="150" Height="28" Grid.ColumnSpan="2"/>

            <CheckBox x:Name="chkCreditReport" HorizontalAlignment="Left" Height="23" Margin="18,630,0,0" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
            <Label Content="Credit Report" HorizontalAlignment="Left" Margin="18,630,0,0" VerticalAlignment="Top" Width="150" Height="28" Grid.ColumnSpan="2"/>

            <CheckBox x:Name="chkFloodCertificate" HorizontalAlignment="Left" Height="23" Margin="18,660,0,0" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
