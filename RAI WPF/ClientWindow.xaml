<Window x:Class="RAI_WPF.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RAI_WPF"
        mc:Ignorable="d"
        Title="Client" Height="450" Width="800">
    <Grid Background="LightGray" Width="800" Height="1000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="296*"/>
            <ColumnDefinition Width="421*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.ColumnSpan="2" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="72" Margin="10,63,0,0" Stroke="Black" VerticalAlignment="Top" Width="707"/>



        <Button x:Name="ClientSaveButton" Content="SAVE" HorizontalAlignment="Left" Height="21" Margin="411,3,0,0" VerticalAlignment="Top" Width="83" Click="ClientSaveButton_Click" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button x:Name="ClientNewButton" Content="NEW" HorizontalAlignment="Left" Height="21" Margin="411,33,0,0" VerticalAlignment="Top" Width="83" Click="ClientNewButton_Click" Grid.Column="1" Grid.ColumnSpan="2"/>


        <ComboBox x:Name="cmbClientC" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CmbClientC_SelectionChanged"/>
        <TextBox x:Name="txtClientC" Visibility="Hidden" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="120"/>

        <Label Content="Client" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="137"/>

        <TextBox x:Name="txtAdvanceRateClient" Grid.Column="1" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Advance Rate" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="137"/>

        <TextBox x:Name="txtMinimumInterest" Grid.Column="1" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Minimum Interest" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="137"/>

        <Label Content="Prime Rate Spread" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="137"/>
        <TextBox x:Name="txtPrimeRateSpread" Grid.Column="1" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="120"/>

        <Label Content="Prime Rate" HorizontalAlignment="Left" Margin="152,102,0,0" VerticalAlignment="Top" Width="137" Grid.Column="1"/>
        <TextBox x:Name="txtPrimeRate" Grid.Column="1" HorizontalAlignment="Left" Margin="248,103,0,0" VerticalAlignment="Top" Width="120"/>
