<Window x:Class="RAI_WPF.UnderwritingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RAI_WPF"
        mc:Ignorable="d"
        Title="Underwriting" Height="1423" Top="5" Width="1200">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="515*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="402*"/>
                <ColumnDefinition Width="220*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="ErrorLabel" Content="" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="469" Margin="136,78,0,0" Grid.ColumnSpan="2" Grid.Column="4"/>

            <Button x:Name="UnderwritingSaveButton" Content="SAVE" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="83" Click="UnderwritingSaveButton_Click" Margin="102,21,0,0" Grid.Column="5"/>

            <DatePicker x:Name="dtFundingDate" HorizontalAlignment="Left" Height="35" Margin="18,13,0,0" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
