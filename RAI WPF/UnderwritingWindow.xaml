            <ComboBox x:Name="cmbEntity" HorizontalAlignment="Left" Height="23" Margin="18,240,0,0" VerticalAlignment="Top" Width="200" Grid.Column="3" Grid.ColumnSpan="2"/>
            <Label Content="Entity" HorizontalAlignment="Left" Margin="18,240,0,0" VerticalAlignment="Top" Width="137" Height="28" Grid.ColumnSpan="2"/>

            <TextBox x:Name="txtPropertyAddress" HorizontalAlignment="Left" Height="85" Margin="18,270,0,0" TextWrapping="Wrap" AcceptsReturn="True" Text="TextBox" VerticalAlignment="Top" Width="267" Grid.Column="3" Grid.ColumnSpan="2" MaxLength="0"/>
            <Label Content="Property Address" HorizontalAlignment="Left" Margin="18,270,0,0" VerticalAlignment="Top" Width="137" Height="28" Grid.ColumnSpan="2"/>

            <Label Content="State" HorizontalAlignment="Left" Margin="330,270,0,0" VerticalAlignment="Top" Width="196" Height="28" Grid.Column="4"/>
            <ComboBox x:Name="cmbState" HorizontalAlignment="Left" Height="23" Margin="385,270,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Grid.Column="4"/>
            
            <Label Content="Pre Closing" HorizontalAlignment="Left" Margin="18,330,0,0" VerticalAlignment="Top" Width="137" FontWeight="Bold" Height="28" Grid.ColumnSpan="2"/>

            <CheckBox x:Name="chkLoanApplication" HorizontalAlignment="Left" Height="23" Margin="18,360,0,0" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
