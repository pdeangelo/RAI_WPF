        <Label x:Name="ErrorLabel" Grid.ColumnSpan="2" Content="" HorizontalAlignment="Left" Height="45" Margin="10,336,0,0" VerticalAlignment="Top" Width="679" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="txtOriginationDiscount" Grid.Column="1" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Origination Discount" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" Width="137"/>
        <TextBox x:Name="txtOriginationDiscount2" Grid.Column="1" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Origination Discount 2nd Period" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Width="254"/>
        <TextBox x:Name="txtOriginationDiscountNumDays" Grid.Column="1" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Number Of Days" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Width="137"/>
