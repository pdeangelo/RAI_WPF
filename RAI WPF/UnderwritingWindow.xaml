            <ComboBox x:Name="cmbClient" HorizontalAlignment="Left" Height="23" Margin="18,53,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CmbClient_SelectionChanged" Grid.Column="3" Grid.ColumnSpan="2"/>
            <Label Content="Client" HorizontalAlignment="Left" Margin="18,53,0,0" VerticalAlignment="Top" Width="137" Height="28" Grid.ColumnSpan="2"/>

            <TextBox x:Name="txtLoanNumber" HorizontalAlignment="Left" Height="23" Margin="18,83,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
            <Label Content="Loan #" HorizontalAlignment="Left" Margin="18,83,0,0" VerticalAlignment="Top" Width="137" Height="28" Grid.ColumnSpan="2"/>

            <TextBox x:Name="txtCustomerName" HorizontalAlignment="Left" Height="23" Margin="18,113,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="267" Grid.Column="3" Grid.ColumnSpan="2"/>
