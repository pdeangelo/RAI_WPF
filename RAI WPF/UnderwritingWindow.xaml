            <CheckBox x:Name="chkHud" HorizontalAlignment="Left" Height="23" Margin="18,690,0,0" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
            <Label Content="HUD-1 (Settlement Statement)" HorizontalAlignment="Left" Margin="18,690,0,0" VerticalAlignment="Top" Width="200" Height="28" Grid.ColumnSpan="2"/>

            <CheckBox x:Name="chkHomeownersInsurance" HorizontalAlignment="Left" Height="23" Margin="18,720,0,0" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
