            <TextBox x:Name="txtInterestRate" HorizontalAlignment="Left" Height="23" Margin="18,840,0,0" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
            <Label Content="Interest Rate" HorizontalAlignment="Left" Margin="18,840,0,0" VerticalAlignment="Top" Width="150" Height="28" Grid.ColumnSpan="2"/>

            <TextBox x:Name="txtMortgageAmount" HorizontalAlignment="Left" Height="23" Margin="18,870,0,0" VerticalAlignment="Top" Width="120" Grid.Column="3" Grid.ColumnSpan="2"/>
