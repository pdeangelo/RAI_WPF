        <CheckBox x:Name="chkInterestBasedOnAdvance" Grid.Column="1" HorizontalAlignment="Left" Margin="10,245,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Interest Based On Advance" HorizontalAlignment="Left" Margin="10,245,0,0" VerticalAlignment="Top" Width="215"/>
        <CheckBox x:Name="chkOriginationBasedOnAdvance" Grid.Column="1" HorizontalAlignment="Left" Margin="10,275,0,0" VerticalAlignment="Top" Width="120"/>
